    body {
        background: url(../assets/img/1.png);
        background-size: cover;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            {{!-- <img src="https://images.pexels.com/photos/70497/pexels-photo-70497.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"> --}}
            <h1>Eat Adam Burger!</h1>
        </div>
        <div class="col-xs-12 text-center" id="top-bar1">
            <h3>100% Fresh Burger</h3>
        </div>
        <br>
        <br>
        <br>


        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}} {{#unless this.devoured}}
                <div class="col-xs-5 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default"> DEVOUR IT!</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
        <br>
        <br>

        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly> {{/if}} {{/each}}
        </div>
    </div>
</div>
<br>
<br>
<br>

<br>
<br>


<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <h2>
                <strong> Enter in a burger you would like to eat! </strong>
            </h2>

            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <br>
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <br>
            <br>

        </div>

    </div>
</div>
